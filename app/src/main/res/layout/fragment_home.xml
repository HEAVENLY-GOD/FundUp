<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/blue"
    android:padding="16dp">

    <Button
        android:id="@+id/myproject"
        style="@style/prithika"
        android:layout_width="154dp"
        android:layout_height="172dp"
        android:text="My projects"
        app:circularflow_radiusInDP="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/post"
        style="@style/prithika"
        android:layout_width="128dp"
        android:layout_height="72dp"
        android:backgroundTint="#FFFFFF"
        android:text="Pitch"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/myproject"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17" />

    <Button
        style="@style/prithika"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:backgroundTint="#FBC02D"
        android:text="Notifier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/myproject"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
/>

    <androidx.cardview.widget.CardView
        android:layout_width="323dp"
        android:layout_height="314dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myproject"
        app:layout_constraintVertical_bias="0.362">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title :"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/card"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:layout_marginLeft="78dp"
            android:textColor="#27FFE7"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/transparent"
            android:inputType="text"
            android:textStyle="bold"
            android:enabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Founders :"
            android:textStyle="bold"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>


        <EditText
            android:id="@+id/found1"
            android:layout_width="186dp"
            android:layout_height="39dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="78dp"
            android:textColor="#27FFE7"
            android:background="@drawable/transparent"
            android:enabled="false"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/found2"
            android:layout_width="186dp"
            android:layout_height="39dp"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="78dp"
            android:textColor="#27FFE7"
            android:background="@drawable/transparent"
            android:enabled="false"
            android:textSize="19sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="86dp"
            android:layout_height="92dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="145dp"
            android:src="@drawable/analytics" />

        <EditText
            android:layout_width="67dp"
            android:layout_height="59dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="165dp"
            android:text="0"
            android:textSize="22sp"
            android:textColor="#27FFE7"
            android:background="@drawable/transparent"
            android:enabled="false"
            android:gravity="center"/>

        <com.lottiefiles.dotlottie.core.widget.DotLottieAnimation
            android:id="@+id/h2o"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            app:dotLottie_autoplay="true"
            app:dotLottie_loop="false"
            app:dotLottie_src="water.json"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="-99dp">

        </com.lottiefiles.dotlottie.core.widget.DotLottieAnimation>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
